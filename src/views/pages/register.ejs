<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <title>BookDiary</title>
</head>

<body>
    <main>
        <div class="container d-flex justify-content-center align-items-center flex-column vh-100">
            <div class="w-25 p-3">
                <!-- Pills navs -->
                <ul class="nav nav-underline nav-justified mb-3">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/auth/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/auth/register">Register</a>
                    </li>
                </ul>
                <!-- Pills navs -->

                <div class="tab-pane fade show" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
                    <form action="/auth/register" method="post">
                        <div class="text-center mb-1">
                            <p>Sign in with:</p>
                            <a class="btn btn-link btn-floating mx-1 disabled">
                                <i class="fa-brands fa-facebook-f"></i>
                            </a>
                            <a class="btn btn-link btn-floating mx-1" href="/auth/google">
                                <i class="fa-brands fa-google"></i>
                            </a>
                            <a class="btn btn-link btn-floating mx-1 disabled">
                                <i class="fa-brands fa-twitter"></i>
                            </a>
                            <a class="btn btn-link btn-floating mx-1 disabled">
                                <i class="fa-brands fa-github"></i>
                            </a>
                        </div>

                        <p class="text-center">or:</p>

                        <!-- Username input -->
                        <div class="form-outline mb-4">
                            <input type="text" name="registerUsername" class="form-control" placeholder="Username" />
                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input type="email" name="registerEmail" class="form-control" placeholder="Email" />
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input type="password" name="registerPassword" class="form-control" placeholder="Password" />
                        </div>

                        <!-- Checkbox -->
                        <div class="form-check d-flex justify-content-center mb-4">
                            <input class="form-check-input me-2" type="checkbox" id="registerCheck" checked />
                            <label class="form-check-label" for="registerCheck">
                                I have read and agree to the terms
                            </label>
                        </div>

                        <!-- Submit button -->
                        <div class="d-grid gap-2">
                            <input type="submit" value="Sign Up" class="btn btn-secondary btn-block mb-4"/>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </main>
    <%- include("../partials/footer.ejs") %>