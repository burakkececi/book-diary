<%- include("../partials/header.ejs") %>
    <main>
        <div class="container d-flex justify-content-center align-items-center flex-column mt-5 w-100">

            <div class="mb-5">
                <h1>Search Books</h1>
            </div>
            <div class="d-flex justify-content-center align-items-center flex-column w-100">
                <search class="w-100">
                    <form action="/note/create" method="post"
                        class="d-flex justify-content-center align-items-center flex-column">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" name="query"
                                placeholder="Write your book name here..." aria-label="Search"
                                aria-describedby="button-addon2" required>
                            <button type="submit" class="btn btn-primary" type="button" id="button-addon2">
                                Search
                            </button>
                        </div>
                    </form>

                    <div class="container">
                        <% if(locals.books) { %>
                            <h3 class="mt-3">Results:</h3>
                            <div class="row row-cols-2" id="results">
                                <% locals.books.forEach(element=> { %>
                                    <div class="col border p-3">
                                        <div class="row">
                                            <div class="col-3">
                                                <% if (element.volumeInfo.imageLinks) { %>
                                                <img src=<%= element.volumeInfo.imageLinks.thumbnail %> class="card-img-top"
                                                alt="...">
                                                <% } else { %>
                                                    <img src="/images/book_default.png" class="card-img-top"
                                                    alt="...">  
                                                <% } %>
                                            </div>
                                            <div class="col-9">
                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        <%= element.volumeInfo.title %>
                                                    </h5>
                                                    <p class="card-text">
                                                        <% if (element.volumeInfo.authors) { %>
                                                        <% element.volumeInfo.authors.forEach(author=> { %>
                                                            <%= author %>, 
                                                        <% }); %>
                                                        <% } %>
                                                    </p>
                                                    <a href=<%="/note/create/" + element.id %> class="btn
                                                        btn-primary">Start
                                                        Diary</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                                        </ul>
                                        <% } %>
                            </div>
                    </div>
            </div>
            </search>
        </div>
        </div>
    </main>
    <%- include("../partials/footer.ejs") %>